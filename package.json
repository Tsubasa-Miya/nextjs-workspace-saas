{
  "name": "saas-starter",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.18.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -p $PORT",
    "lint": "next lint",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prestart": "bash scripts/prestart.sh",
    "seed": "node scripts/seed.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:lib": "vitest run -c vitest.lib.config.ts --coverage",
    "test:api:cov": "vitest run -c vitest.api.config.ts --coverage",
    "test:ui:cov": "vitest run -c vitest.ui.config.ts --coverage",
    "test:ci": "COV=99 npm run -s test:lib && COV=99 npm run -s test:api:cov",
    "test:combined:cov": "vitest run --coverage",
    "coverage:clean": "rimraf coverage coverage-api coverage-lib || rm -rf coverage coverage-api coverage-lib"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.637.0",
    "@aws-sdk/client-sesv2": "3.637.0",
    "@aws-sdk/s3-request-presigner": "3.637.0",
    "@prisma/client": "5.16.2",
    "argon2": "^0.41.1",
    "next": "14.2.5",
    "next-auth": "^5.0.0-beta.19",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/node": "20.11.30",
    "@types/react": "19.1.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@vitest/coverage-v8": "1.6.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "jsdom": "^26.1.0",
    "prisma": "5.16.2",
    "ts-node": "10.9.2",
    "typescript": "5.4.5",
    "vitest": "1.6.0"
  }
}
