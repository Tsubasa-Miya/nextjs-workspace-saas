# Local development only. In production use SSM/Secrets Manager.

DATABASE_URL="postgresql://postgres:postgres@localhost:5432/saas?schema=public"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="change-me"

# For S3 signed URL (optional in dev)
AWS_REGION="ap-northeast-1"
S3_BUCKET="your-bucket-name"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""

# For emails (SES)
MAIL_FROM="no-reply@example.com"

# Base URL for building links in emails
APP_BASE_URL="http://localhost:3000"

# UI thresholds
# Highlight invites that expire within this many hours (client-side)
NEXT_PUBLIC_INVITE_EXP_SOON_HOURS="48"

# UI
# Character limit for note preview in lists (client-side)
NEXT_PUBLIC_NOTE_PREVIEW_LIMIT="280"
